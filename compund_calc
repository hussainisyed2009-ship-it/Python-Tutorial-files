
principle = 0
rate = 0
time = 0

while principle <= 0:
    principle = float(input("Enter the principle amount: "))
    if principle <= 0:
        print("Please enter a valid principle amount.")
while rate <= 0:
    rate = float(input("Enter the rate of interest (as a decimal): "))
    if rate <= 0:
        print("Please enter a valid rate of interest.")
while time <= 0:
    time = float(input("enter the time (in years): "))
    if time <= 0:
        print("Please enter a valid time.")
print(rate)
print(time)
print(principle)

interest_calc = (principle * rate * time + principle)
print(interest_calc)