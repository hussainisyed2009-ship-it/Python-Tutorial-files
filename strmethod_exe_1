
username = input("please enter your username: ")

username.find(" ") # find the index of the first occurrence of a space
username.isalpha() # check if the string contains only alphabetic characters

if len(username) > 12:
    print("username must be at less than 12 characters long")
elif not username.find(" ") == -1:
    print("username should not contain spaces")
elif not username.isalpha():
    print("username should contain only alphabetic characters")
else:
    print("username is valid")
