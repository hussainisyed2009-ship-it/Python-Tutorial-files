import time

my_time = int(input("Enter the time in seconds for the countdown: "))

for i in range(my_time, 0, -1): # countdown from my_time to 1
    seconds = i % 60 # get the seconds
    minutes = int(i / 60) % 60
    hours = int(i/3600) # get the minutes
    print(f"{hours:02}:{minutes:02}:{seconds:02}") # print the time in mm:ss format
    time.sleep(1)

print("Time's up!")
